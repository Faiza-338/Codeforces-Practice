
#include <stdio.h>
#include <ctype.h>
#include <string.h>
int main() {
    int n,i;
    char x[6000];
    scanf("%d\n",&n);
    for(i=1;i<=n;i++){
        scanf("%s",&x);
        int l=strlen(x);
        if(l>10){
            printf("%c",x[0]);
            printf("%d",l-2);
            printf("%c",x[l-1]);
        }


    else{
        printf("%s",x);
       }
    }
    return 0;
}
